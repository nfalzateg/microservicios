package com.co.uniquindio.microservicios.controller;

import static org.junit.jupiter.api.Assertions.assertTrue;

import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.co.uniquindio.microservicios.entities.Pago;

import io.cucumber.java.en.And;

@RestController
@RequestMapping(path = "/pago")
public class PagoController {

	@PostMapping
	public ResponseEntity<Pago> add(@RequestBody Pago val) {
		
		 val.setEstadoId(2);
		 val.setVoucherId("UHIAUSD8966asdD");
		 
		 System.out.println(val.getClienteId());
		 
		 return ResponseEntity.status(HttpStatus.CREATED).body(val);
	}
	
	@GetMapping
    public ResponseEntity<String> unauthorized() {
        return ResponseEntity.status(HttpStatus.UNAUTHORIZED).body("Unauthorized");
    }
	
	@And("metodo de pago valido")
	public void metodoDePagoValido() throws Throwable {
		
		boolean valido = false;
		
		//Se valida el metodo de pago
		if(pagoDTO.getMetodoPagoId().equals("1") || pagoDTO.getMetodoPagoId().equals("2") || pagoDTO.getMetodoPagoId().equals("3")) {
			valido = true;
		}
		
		assertTrue(valido);
	}
	
	@And("compra para pagar")
	public void compraParaPagar() throws Throwable {
		
		//Se valida que el primer caracter sea una J y que su tama√±o se igual a 13 caracteres
		assertTrue(pagoDTO.getRefVenta().charAt(0) == 'J' && pagoDTO.getRefVenta().length() == 13);
	}

}
