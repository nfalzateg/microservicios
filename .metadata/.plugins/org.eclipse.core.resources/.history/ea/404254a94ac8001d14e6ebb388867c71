import io.cucumber.java.en.Then;
import io.cucumber.java.en.When;

public class CrearPago {
  @Given("Soy un usuario con un token valido")
  public void given() throws Throwable {
  }
  
  @And("metodo de pago valido")
  public void validarMetodoPago() throws Throwable {
  }
  
  @And("compra para pagar")
  public void validarCompra() throws Throwable {
  }

  @When("invoco el servicio de crear pago")
  public void invocarCrearPago() throws Throwable {
  }

  @Then("obtengo un status code {int}")
  public void then(int status) throws Throwable {
  }

  @And("^you are in And annotation$")
  public void and() throws Throwable {
  }

}
